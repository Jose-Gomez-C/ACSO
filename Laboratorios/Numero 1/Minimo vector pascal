program minimoVector;
type
vector = Array[0..10] of real;
var
arreglo : vector;
minimo : real;
i : integer;
begin
        minimo:=999999999;
        for i:=0 to 10 do begin
                write('Intorduzca los valores del arreglo recuerde que solo son 10 datos ');
                readln(arreglo[i]);
                if minimo>arreglo[i] then
                        begin
                                minimo:=arreglo[i];
                        end;
        end;
        write('El valor minimo es:', minimo:0:4);
end.
